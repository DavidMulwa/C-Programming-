//Function to determine an even or odd num
#include<stdio.h>
int relation(int num);
int main()
{
    int num,result;
    printf("\nEnter the number:");
    scanf("%d",&num);
    
    result= (num%2==0);
    if (num%2==0){
    printf("\nNumber is even");
    }
    else{ 
        printf("\nNumber is odd");
    }
    return 0;
}

int relation(int num)
{
    int answer;
    answer=num%2==0;
    return answer;
}
